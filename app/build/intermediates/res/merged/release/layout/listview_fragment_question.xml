<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_listview_item_split"
    android:padding="10dp" >

    <TextView
        android:id="@+id/fragment_question_listview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="考研必备的英语单词和一套很棒的记忆法，需瞧~"
        android:textColor="#313233"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/fragment_question_listview_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_question_listview_title"
        android:layout_marginTop="5dp"
        android:maxLines="4"
        android:text="怎么说，比西工，华南理工之类低一个档次 不好不坏吧，看你考了多少分吧 过重点30~50分比较适合合肥工大（安徽除外）"
        android:textColor="#545454"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/fragment_question_listview_relative_buttom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_question_listview_details"
        android:layout_marginTop="8dp" >

        <ImageView
            android:id="@+id/fragment_question_listview_image_is_da_ren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:layout_marginRight="3dp"
            android:src="@drawable/icon_da_ren" />

        <TextView
            android:id="@+id/fragment_question_listview_answer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/fragment_question_listview_image_is_da_ren"
            android:text="我_爱_中_华"
            android:textColor="#7A7C80"
            android:textSize="12sp" />

        <View
            android:id="@+id/fragment_question_listview_divide1"
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/fragment_question_listview_answer_name"
            android:background="#7A7C80" />

        <TextView
            android:id="@+id/fragment_question_listview_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/fragment_question_listview_divide1"
            android:text="2010-10-12"
            android:textColor="#7A7C80"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/fragment_question_listview_image_agree_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/fragment_question_listview_agree_num"
            android:background="#00000000"
            android:src="@drawable/icon_agree" />

        <TextView
            android:id="@+id/fragment_question_listview_agree_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="91"
            android:textColor="#7A7C80"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/F:/src/BaiduNewsSearchT2/app/src/main/res/layout/listview_fragment_question.xml -->