        android:textSize="20dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/fragment_postbar_listview"
        android:layout_alignStart="@+id/fragment_postbar_listview"
        android:layout_alignRight="@+id/fragment_postbar_listview"
        android:layout_alignEnd="@+id/fragment_postbar_listview" />


</RelativeLayout>
