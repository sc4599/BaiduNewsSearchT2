    android:layout_height="match_parent" >
    
    <ListView 
        android:id="@+id/fragment_postbar_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
